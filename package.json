{
  "name": "fullstackclassweb",
  "version": "1.0.0",
  "description": "A full stack web application with TypeScript support",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\"",
    "build": "npm run build:css && npm run build:js",
    "watch:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/output.css",
    "watch:js": "tsc --watch",
    "build:js": "tsc"
  },
  "keywords": [
    "fullstack",
    "web",
    "typescript",
    "tailwindcss"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "tailwindcss": "^4.1.17",
    "concurrently": "^9.2.1"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "@types/node": "^20.13.0"
  }
}
